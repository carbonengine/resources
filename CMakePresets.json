{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 31,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "carbon_windows_vcpkg_vs",
      "toolchainFile": "${sourceDir}/vendor/github.com/microsoft/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "binaryDir": "./.cmake-build-${generator}-${presetName}",
      "generator": "Visual Studio 17 2022",
      "toolset": {
        "value": "v141"
      },
      "cacheVariables": {
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON",
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/cmake/triplets",
        "VCPKG_TARGET_TRIPLET": "x64-windows-carbon",
        "VCPKG_HOST_TRIPLET": "x64-windows-carbon"
      },
      "environment": {
        "X_VCPKG_REGISTRIES_CACHE": "${sourceDir}/vcpkg_registry_cache"
      }
    },
    {
      "name": "carbon_windows_vcpkg_nmc",
      "toolchainFile": "${sourceDir}/vendor/github.com/microsoft/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "binaryDir": "./.cmake-build-${generator}-${presetName}",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON",
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/cmake/triplets",
        "VCPKG_TARGET_TRIPLET": "x64-windows-carbon",
        "VCPKG_HOST_TRIPLET": "x64-windows-carbon"
      },
      "environment": {
        "X_VCPKG_REGISTRIES_CACHE": "${sourceDir}/vcpkg_registry_cache"
      }
    },
    {
      "name": "carbon_windows_vcpkg_nmc_with_dev_features",
      "inherits": "carbon_windows_vcpkg_nmc",
      "cacheVariables": {
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON",
        "DEV_FEATURES": "ON"
      }
    },
    {
      "name": "carbon_osx_vcpkg",
      "toolchainFile": "${sourceDir}/vendor/github.com/microsoft/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "binaryDir": "./.cmake-build-${generator}-${presetName}",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON",
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/cmake/triplets",
        "VCPKG_TARGET_TRIPLET": "arm64-osx-carbon",
        "VCPKG_HOST_TRIPLET": "arm64-osx-carbon"
      },
      "environment": {
        "X_VCPKG_REGISTRIES_CACHE": "${sourceDir}/vcpkg_registry_cache"
      }
    },
    {
      "name": "ci",
      "hidden": true,
      "cacheVariables": {
        "BUILD_DOCUMENTATION": "ON",
        "BUILD_TESTING": "ON",
        "VCPKG_MANIFEST_FEATURES": "docs;tests"
      }
    },
    {
      "name": "carbon_windows_vcpkg_vs_ci",
      "inherits": ["carbon_windows_vcpkg_vs", "ci"]
    },
    {
      "name": "carbon_windows_vcpkg_nmc_ci",
      "inherits": ["carbon_windows_vcpkg_nmc", "ci"]
    },
    {
      "name": "carbon_osx_vcpkg_ci",
      "inherits": ["carbon_osx_vcpkg", "ci"]
    }
  ]
}
